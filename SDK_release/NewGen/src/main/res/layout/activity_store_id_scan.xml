<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="6dp"
    android:background="#ffffff"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SCAN STORE QR CODE"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/crewName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1" />


    <TextView
        android:id="@+id/displayedName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

    <RadioGroup
        android:id="@+id/mode_output"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp">

    </RadioGroup>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_vertical"
        android:layout_marginBottom="10dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/crewPhoto"
            android:layout_width="match_parent"
            android:layout_height="287dp"
            app:srcCompat="@drawable/trolley" />

        <ImageView
            android:id="@+id/scanButton"
            android:layout_width="wrap_content"
            android:layout_height="80.0dip"
            android:layout_centerInParent="true"
            android:background="@drawable/button_background_selector"
            android:padding="5.0dip" />

        <ImageView
            android:id="@+id/nextButton"
            android:layout_width="wrap_content"
            android:layout_height="94dp"
            app:srcCompat="@drawable/next_up" />

        <EditText
            android:id="@+id/scanResult"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_marginTop="10dp"
            android:singleLine="true"
            android:visibility="invisible"
            tools:visibility="invisible" />

        <EditText
            android:id="@+id/scanResult2"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_marginTop="10dp"
            android:imeOptions="actionDone"
            android:singleLine="true"
            android:visibility="invisible"
            tools:visibility="invisible" />

        <Spinner
            android:id="@+id/spinner_barcode"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:visibility="invisible" />

        <RadioButton
            android:id="@+id/keyboard_output"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/keyboard_output"
            android:visibility="invisible" />

        <GridLayout
            android:id="@+id/grid_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_weight="0.0"
            android:background="#88808080"
            android:columnCount="2"
            android:paddingLeft="10.0dip"
            android:paddingTop="3.0dip"
            android:paddingRight="10.0dip"
            android:paddingBottom="86.0dip"
            android:rowCount="5"
            android:visibility="invisible"
            tools:visibility="invisible">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_column="0"
                android:paddingRight="10.0dip"
                android:text="@string/decode_data"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="#ffffffff"
                tools:visibility="invisible" />

            <TextView
                android:id="@+id/barcode_result"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_column="1"
                android:ellipsize="end"
                android:maxLines="2"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="#ffffffff" />

            <TextView
                android:id="@+id/length_result"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="2"
                android:layout_column="1"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="#ffffffff" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="3"
                android:layout_column="0"
                android:paddingRight="10.0dip"
                android:text="@string/decode_symbology"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="#ffffffff"
                android:visibility="gone" />

            <TextView
                android:id="@+id/symbology_result"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="3"
                android:layout_column="1"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="#ffffffff"
                android:visibility="gone" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="4"
                android:layout_column="0"
                android:paddingRight="10.0dip"
                android:text="@string/decode_time"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="#ffffffff"
                android:visibility="gone" />

            <TextView
                android:id="@+id/decode_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="4"
                android:layout_column="1"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="#ffffffff"
                android:visibility="gone" />
        </GridLayout>

        <RadioButton
            android:id="@+id/intent_output"
            android:layout_width="142dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/intent_output"
            android:visibility="invisible" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <CheckBox
                android:id="@+id/continuousScan"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                android:text="@string/continuous_scan"
                android:visibility="invisible" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="10.0dip"
            android:text="@string/decode_length"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="#ffffffff"
            tools:visibility="invisible" />
    </LinearLayout>

</LinearLayout>